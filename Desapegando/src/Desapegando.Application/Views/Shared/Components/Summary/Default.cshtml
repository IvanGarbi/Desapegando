@if (ViewData.ModelState.ErrorCount > 0 && ViewData.ModelState.Keys.FirstOrDefault() == "") // a segunda condição é para não aparecer sempre que falta um campo obrigatório.
{
    <div class="d-flex flex-center" aria-live="polite" aria-atomic="true">
        <div class="toast show" role="alert" data-bs-autohide="false" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Algo deu errado:</strong>
                <button class="btn ms-2 p-0" type="button" data-bs-dismiss="toast" aria-label="Close"><span class="uil uil-times fs-1"></span></button>
            </div>
            <div class="toast-body" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
}



@*Verificar design das divs abaixo*@

@if (!string.IsNullOrEmpty(ViewBag.Sucesso))
{
    <div style="padding-top: 15px"></div>

    <div id="msg_box" class="alert alert-success">
        <button type="button" class="btn-close" data-dismiss="alert"></button>
        <h3 id="msgRetorno">@ViewBag.Sucesso</h3>
    </div>
}

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-soft-success alert-dismissible fade show" role="alert">
        <strong>Sucesso!</strong> @Html.Raw(TempData["Sucesso"].ToString())

        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}