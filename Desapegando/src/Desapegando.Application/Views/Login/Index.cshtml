@model Desapegando.Application.Models.CondominoViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section class="padding-y container" style="min-height: 35vh">
    <div class="card mx-auto" style="max-width: 380px; margin-top: 100px;">

        <div class="card-body">
            <h4 class="card-title mb-4">Seja bem vindo!</h4>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="mb-3">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sobrenome"></label>
                    <input asp-for="Sobrenome" class="form-control" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cpf"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sexo"></label>
                    <input asp-for="Sexo" class="form-control" />
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Apartamento"></label>
                    <input asp-for="Apartamento" class="form-control" />
                    <span asp-validation-for="Apartamento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Idade"></label>
                    <input asp-for="Idade" class="form-control" />
                    <span asp-validation-for="Idade" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="Telefone"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Senha"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmarSenha"></label>
                    <input type="password" asp-for="ConfirmarSenha" class="form-control" />
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>

                <div class="mb-3 d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

